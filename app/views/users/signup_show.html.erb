

<h1>Sign Up</h1>

<%= form_for :user do |f| %>
<fieldset>
  <legend>Please Log In</legend>
  
    <div class="left"><%= label_tag :name, 'Name:' %></div>
    <div class="right"><%= text_field_tag :name, params[:name] %></div>

    <div class="left"><%= label_tag :password, 'Password:' %></div>
    <div class="right"><%= password_field_tag :password, params[:password] %></div>

    <div class="right"><div class="button"><%= submit_tag "Login" %></div></div>

</fieldset>
<% end %>


<%= link_to 'Back', signin_users_path %>